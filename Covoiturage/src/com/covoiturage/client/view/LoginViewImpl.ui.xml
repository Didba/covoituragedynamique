<!-- ViewerNvUser.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:form="urn:import:com.extjs.gxt.ui.client.widget.form"
	>
		<ui:with type="com.covoiturage.client.i18n.LoginViewConstants" field="constants"/>
<ui:with type="com.covoiturage.client.resource.CovoiturageResources" field="resources"/>
	
	

<g:AbsolutePanel ui:field="flowpanel" width="100%" height="100%">
	<g:Label styleName='{resources.style.h1}'  ui:field="title" text="{constants.login}"/>	
	<g:HorizontalPanel >	
		<g:Image ui:field="image" />
			<g:VerticalPanel  verticalAlignment="ALIGN_TOP" horizontalAlignment="ALIGN_CENTER">
				<form:FormPanel ui:field="header" heading="{constants.login}">
					<form:TextField ui:field="loginField" fieldLabel="{constants.username}"/>
					<form:TextField ui:field="passwordField" fieldLabel="{constants.password}"/>
					<g:HorizontalPanel>
						<g:Button ui:field="sendButton"  styleName='{resources.style.button}' text="{constants.submit}"/>
						<g:Button ui:field="addUserButton"  styleName='{resources.style.button}' text="{constants.newuser}"/>
					</g:HorizontalPanel>
				</form:FormPanel>	
			</g:VerticalPanel>
	</g:HorizontalPanel>
</g:AbsolutePanel>
</ui:UiBinder>
