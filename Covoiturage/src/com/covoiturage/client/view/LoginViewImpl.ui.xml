<!-- ViewerNvUser.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'

	>
	
	<ui:style src="facebook.css"/>
	
	
	<g:FlowPanel ui:field="flowpanel" width="100%" height="100%">
	
		<g:Label styleName='{style.h1}'  ui:field="titre"/>
		
		
		<g:HorizontalPanel styleName='{style.containerphtoto}'>	
		<g:Image ui:field="image" styleName='{style.photo}'  />
		<g:VerticalPanel styleName='{style.panelfullborder}' width="" height="" verticalAlignment="ALIGN_TOP" horizontalAlignment="ALIGN_CENTER">

		
		
			<g:Label ui:field="log" styleName='{style.h2}' />
			<g:HorizontalPanel>
				<g:Label styleName='{style.label}' ui:field="name"/>
				<g:TextBox ui:field="nameField"  styleName='{style.textbox}'/>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label styleName='{style.label}' ui:field="pass"/>
				<g:PasswordTextBox ui:field="passField" styleName='{style.textbox}'/>
			</g:HorizontalPanel>
			<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER">
				<g:Button ui:field="sendButton"  styleName='{style.button}'/>
				<g:Button ui:field="addUserButton"  styleName='{style.button}'/>
			</g:HorizontalPanel>	
		</g:VerticalPanel>
		<g:Image ui:field="image2" styleName='{style.photo}'  />	
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Anchor ui:field="anchorfr" styleName='{style.anchor}' />
			<g:Anchor ui:field="anchornl" styleName='{style.anchor}'/>
			<g:Anchor ui:field="anchoren" styleName='{style.anchor}'/>
			<g:Anchor ui:field="anchorit" styleName='{style.anchor}'/>
			<g:Anchor ui:field="anchorch" styleName='{style.anchor}'/>
		</g:HorizontalPanel>
	</g:FlowPanel>
		

</ui:UiBinder>
