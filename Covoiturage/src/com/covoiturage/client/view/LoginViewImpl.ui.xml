<!-- ViewerNvUser.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:form="urn:import:com.extjs.gxt.ui.client.widget.form"
	>
	
	<ui:style src="stylesheet.css"/>
	
	

<g:FlowPanel ui:field="flowpanel" width="100%" height="100%">
	<g:Label styleName='{style.h1}'  ui:field="title"/>	
	<g:HorizontalPanel styleName='{style.containerphtoto}'>	
		<g:Image ui:field="image" styleName='{style.photo}'  />
			<g:VerticalPanel styleName='{style.panelfullborder}'  verticalAlignment="ALIGN_TOP" horizontalAlignment="ALIGN_CENTER">
				<!--  g:Label ui:field="log" styleName='{style.h2}' /-->
				<form:FormPanel>
					<form:TextField ui:field="loginField" />
					<form:TextField ui:field="passwordField" />
					<g:HorizontalPanel>
						<g:Button ui:field="sendButton"  styleName='{style.button}'/>
						<g:Button ui:field="addUserButton"  styleName='{style.button}'/>
					</g:HorizontalPanel>
				</form:FormPanel>	
			</g:VerticalPanel>
		<g:Image ui:field="image2" styleName='{style.photo}'  />	
	</g:HorizontalPanel>
</g:FlowPanel>
</ui:UiBinder>
