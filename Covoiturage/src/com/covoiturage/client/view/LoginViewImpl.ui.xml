<!-- ViewerNvUser.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	
	<ui:style src="facebook.css"/>

	
	<g:FlowPanel ui:field="flowpanel" width="100%" height="100%">
	
		<g:Label styleName='{style.h1}'  text="Bienvenue sur covoiturage.appspot.com"/>
		
		<g:VerticalPanel styleName='{style.centerpanel}' width="" height="" verticalAlignment="ALIGN_TOP" horizontalAlignment="ALIGN_CENTER">
			<g:Label styleName='{style.h2}' text="Login"/>
			<g:HorizontalPanel>
				<g:Label styleName='{style.label}' text="UserName :"/>
				<g:TextBox ui:field="nameField" text="UserName" styleName='{style.textbox}'/>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label styleName='{style.label}' text="Password :"/>
				<g:PasswordTextBox ui:field="passField" text="Password" styleName='{style.textbox}'/>
			</g:HorizontalPanel>
			<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER">
				<g:Button ui:field="sendButton" text="Login" styleName='{style.button}'/>
				<g:Button ui:field="addUserButton" text="Create Account" styleName='{style.button}'/>
			</g:HorizontalPanel>	
			
		</g:VerticalPanel>
		
	</g:FlowPanel>
		

</ui:UiBinder>
