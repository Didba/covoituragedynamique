<!-- ViewerNvUser.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	
	<ui:style src="facebook.css"/>

	
	<g:FlowPanel ui:field="flowpanel" width="100%" height="100%">
	
		<g:Label styleName='{style.h1}'  text="Create a new Account"/>
	
	<g:VerticalPanel ui:field="container" styleName='{style.centerpanel}' horizontalAlignment="ALIGN_LEFT">
		<g:Label styleName='{style.h2}'  ui:field="header"/>
		<g:HorizontalPanel>
			<g:Label styleName='{style.label}'  ui:field="username"/>
			<g:TextBox ui:field="login" styleName='{style.textbox}'/>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label styleName='{style.label}' ui:field="firstname"/>
			<g:TextBox ui:field="firstName"  styleName='{style.textbox}'/>
		</g:HorizontalPanel>	
		<g:HorizontalPanel>
			<g:Label styleName='{style.label}' ui:field="lastname"/>
			<g:TextBox ui:field="lastName"  styleName='{style.textbox}'/>
		</g:HorizontalPanel>	
		<g:HorizontalPanel>
			<g:Label styleName='{style.label}' ui:field="email"/>
			<g:TextBox ui:field="emailAdress"  styleName='{style.textbox}'/>
		</g:HorizontalPanel>	
		<g:HorizontalPanel>
			<g:Label styleName='{style.label}' ui:field="passwordlab"/>
			<g:PasswordTextBox ui:field="password" styleName='{style.textbox}'/>
		</g:HorizontalPanel>	
		<g:HorizontalPanel>
			<g:Label styleName='{style.label}' ui:field="Make"/>
			<g:SuggestBox ui:field="vehicleMake" text="" styleName='{style.textbox}'/>
		</g:HorizontalPanel>	
				<g:HorizontalPanel>
			<g:Label styleName='{style.label}' ui:field="Model"/>
			<g:SuggestBox ui:field="vehicleModel" text="" styleName='{style.textbox}'/>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
				<g:Label styleName='{style.label}' ui:field="languelab"/>
				<g:ListBox ui:field="langue"  />
		</g:HorizontalPanel>	
		<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER">
			<g:Button ui:field="addButton" styleName='{style.button}' />
		</g:HorizontalPanel>
		
	</g:VerticalPanel>
	
	</g:FlowPanel>
		

</ui:UiBinder>
