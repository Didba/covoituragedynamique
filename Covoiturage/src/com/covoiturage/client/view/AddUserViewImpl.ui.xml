<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:form="urn:import:com.extjs.gxt.ui.client.widget.form">
	<ui:with type="com.extjs.gxt.ui.client.store.ListStore" field="store" />
		<ui:with type="com.covoiturage.client.i18n.AddUserViewConstants" field="constants"/>
	<ui:style src="stylesheet.css" />
		
	<g:FlowPanel ui:field="flowpanel" width="100%" height="100%">
		<g:Label styleName='{style.h1}' text="Create a new Account" />
		<g:VerticalPanel ui:field="container" styleName='{style.centerpanel}'
			horizontalAlignment="ALIGN_LEFT">
			<form:FormPanel ui:field="header">
				<form:TextField ui:field="loginField" styleName='{style.textbox}' />
				<form:TextField ui:field="firstNameField" styleName='{style.textbox}' />
				<form:TextField ui:field="lastNameField" styleName='{style.textbox}' />
				<form:TextField ui:field="emailAdressField"
					styleName='{style.textbox}' />
				<form:TextField ui:field="passwordField" styleName='{style.textbox}' />
				<g:Button ui:field="addButton" styleName='{style.button}' />
			</form:FormPanel>
		</g:VerticalPanel>
	</g:FlowPanel>
</ui:UiBinder>
