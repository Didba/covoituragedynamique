<!-- ViewerNvUser.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	
	<ui:style src="facebook.css"/>

	
	<g:FlowPanel ui:field="flowpanel" width="100%" height="100%">
	
		<g:Label styleName='{style.h1}'  text="Create a new Account"/>
	
	<g:VerticalPanel ui:field="container" styleName='{style.centerpanel}' horizontalAlignment="ALIGN_LEFT">
		<g:Label styleName='{style.h2}'  text="Enter your personnal data"/>
		<g:HorizontalPanel>
			<g:Label styleName='{style.label}'  text="Username :"/>
			<g:TextBox ui:field="login" text="UserName" styleName='{style.textbox}'/>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label styleName='{style.label}' text="FirstName :"/>
			<g:TextBox ui:field="firstName" text="Firstname" styleName='{style.textbox}'/>
		</g:HorizontalPanel>	
		<g:HorizontalPanel>
			<g:Label styleName='{style.label}' text="LastName :"/>
			<g:TextBox ui:field="lastName" text="Lastname" styleName='{style.textbox}'/>
		</g:HorizontalPanel>	
		<g:HorizontalPanel>
			<g:Label styleName='{style.label}' text="Email :"/>
			<g:TextBox ui:field="emailAdress" text="EmailAdress" styleName='{style.textbox}'/>
		</g:HorizontalPanel>	
		<g:HorizontalPanel>
			<g:Label styleName='{style.label}' text="Password :"/>
			<g:PasswordTextBox ui:field="password" text="Password" styleName='{style.textbox}'/>
		</g:HorizontalPanel>	
		<g:HorizontalPanel>
			<g:Label styleName='{style.label}' text="Make :"/>
			<g:SuggestBox ui:field="vehicleMake" text="" styleName='{style.textbox}'/>
		</g:HorizontalPanel>	
				<g:HorizontalPanel>
			<g:Label styleName='{style.label}' text="Model :"/>
			<g:SuggestBox ui:field="vehicleModel" text="" styleName='{style.textbox}'/>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
				<g:Label styleName='{style.label}' text="Langue : "/>
				<g:ListBox ui:field="language"  />
		</g:HorizontalPanel>	
		<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER">
			<g:Button ui:field="addButton" styleName='{style.button}' text="Register"/>
		</g:HorizontalPanel>
		
	</g:VerticalPanel>
	
	</g:FlowPanel>
		

</ui:UiBinder>
