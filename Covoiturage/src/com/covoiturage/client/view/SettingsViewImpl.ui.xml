<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:m='urn:import:com.google.gwt.maps.client'
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
	xmlns:dir='urn:import:com.google.gwt.maps.client.geocoder'>
	
	<ui:style src="facebook.css"/>
		

  	
  		<g:FlowPanel ui:field="flowpanel" width="100%" height="100%">
  		
	
  			<g:VerticalPanel ui:field="container" >
				<g:Label styleName='{style.h2}'  text="Modify your personnal data"/>
				<g:HorizontalPanel width="304px">
					<g:Label styleName='{style.label}'  text="Username :" width="8em"/>
					<g:TextBox ui:field="login" styleName='{style.label}'/>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label styleName='{style.label}' text="FirstName :" width="8em"/>
					<g:TextBox ui:field="firstName" text="Firstname" styleName='{style.textbox}'/>
				</g:HorizontalPanel>	
				<g:HorizontalPanel>
					<g:Label styleName='{style.label}' text="LastName :" width="8em"/>
					<g:TextBox ui:field="lastName" text="Lastname" styleName='{style.textbox}'/>
				</g:HorizontalPanel>	
				<g:HorizontalPanel>
					<g:Label styleName='{style.label}' text="Email :" width="8em"/>
					<g:TextBox ui:field="emailAdress" text="EmailAdress" styleName='{style.textbox}'/>
				</g:HorizontalPanel>	
				<g:HorizontalPanel>
					<g:Label styleName='{style.label}' text="Previous Password :" width="8em"/>
					<g:PasswordTextBox ui:field="prevpassword" text="Password" styleName='{style.textbox}'/>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label styleName='{style.label}' text="New Password :" width="8em"/>
					<g:PasswordTextBox ui:field="newpassword" text="Password" styleName='{style.textbox}'/>
				</g:HorizontalPanel>
				<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER">
					<g:Button ui:field="submitButton" styleName='{style.button}' text="Register"/>
				</g:HorizontalPanel>
		
	</g:VerticalPanel>
  		
  		</g:FlowPanel>
  	
</ui:UiBinder>