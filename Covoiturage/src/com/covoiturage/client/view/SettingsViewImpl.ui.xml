<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:m='urn:import:com.google.gwt.maps.client'
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
	xmlns:dir='urn:import:com.google.gwt.maps.client.geocoder'>
	
	<ui:style src="facebook.css"/>
		

  		
<g:FlowPanel>	
  			<g:VerticalPanel ui:field="flowpanel" styleName='{style.centerpanel2}' width="30%" height="100%">
				<g:Label styleName='{style.h2}'  ui:field="header"/>
				<g:HorizontalPanel width="304px">
					<g:Label styleName='{style.label}'  ui:field="username" width="8em"/>
					<g:TextBox ui:field="login" styleName='{style.textbox}'/>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label styleName='{style.label}' ui:field="firstname" width="8em"/>
					<g:TextBox ui:field="firstName"  styleName='{style.textbox}'/>
				</g:HorizontalPanel>	
				<g:HorizontalPanel>
					<g:Label styleName='{style.label}' ui:field="lastname" width="8em"/>
					<g:TextBox ui:field="lastName"  styleName='{style.textbox}'/>
				</g:HorizontalPanel>	
				<g:HorizontalPanel>
					<g:Label styleName='{style.label}' ui:field="email" width="8em"/>
					<g:TextBox ui:field="emailAdress"  styleName='{style.textbox}'/>
				</g:HorizontalPanel>	
				<g:HorizontalPanel>
					<g:Label styleName='{style.label}' ui:field="prevpasswordlab" width="8em"/>
					<g:PasswordTextBox ui:field="prevpassword"  styleName='{style.textbox}'/>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label styleName='{style.label}' ui:field="newpasswordlab" width="8em"/>
					<g:PasswordTextBox ui:field="newpassword" styleName='{style.textbox}'/>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
				<g:Label styleName='{style.label}' ui:field="languelab" width="8em"/>
				<g:ListBox ui:field="langue"  />
				</g:HorizontalPanel>
				<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER">
					<g:Button ui:field="submitButton" styleName='{style.button}'/>
				</g:HorizontalPanel>
		
	</g:VerticalPanel>
	
	
</g:FlowPanel>	
	
  	
</ui:UiBinder>