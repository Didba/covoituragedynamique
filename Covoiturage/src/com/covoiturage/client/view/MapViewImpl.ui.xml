<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:m='urn:import:com.google.gwt.maps.client'
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
	xmlns:dir='urn:import:com.google.gwt.maps.client.geocode'>
	
	<ui:style src="facebook.css"/>
		

  	
  		<g:FlowPanel ui:field="flowpanel" width="100%" height="100%">
  		
  		<g:HorizontalPanel styleName='{style.menutirte}' width="100%" height="100%">
  		<g:Label styleName='{style.h1titre}'  text="Titre" width="17em" />
  		<g:Anchor ui:field='EditProfil' text="Edit my profil" styleName='{style.buttontitre}' width="90px" height="30px"/>
  		<g:Anchor ui:field='logout' text="Logout" styleName='{style.buttontitre}' width="42px" height="30px"/>
  		</g:HorizontalPanel>
  		
  		<g:HorizontalPanel  horizontalAlignment="ALIGN_LEFT">
  			<g:HorizontalPanel styleName='{style.cartecontainer}'>
  				<m:MapWidget ui:field='mapWidget' width="350px" height="350px" /> 
  			
  				<g:VerticalPanel >
  					<g:HorizontalPanel>
  						<g:Label styleName='{style.label}' text="From :" width="3em"/>
						<g:SuggestBox ui:field="originAddress" text="1,Grand place, Louvain-La-Neuve" width="200px" styleName='{style.textbox}'/>
  					</g:HorizontalPanel>
  					<g:HorizontalPanel>
  						<g:Label styleName='{style.label}' text="To :" width="3em"/>
						<g:SuggestBox ui:field="destinationAddress" text="2,Grand place, Louvain-La-Neuve" width="200px" styleName='{style.textbox}'/>
  					</g:HorizontalPanel>
  					<g:HorizontalPanel>
  						<d:DatePicker ui:field="dateOfJourney" styleName='{style.datepicker}'/>
  					</g:HorizontalPanel>
  					<g:HorizontalPanel>
  						<g:RadioButton  ui:field="driverRadioButton" styleName='{style.radiobutton}' ui:name="typeOfUser"/>
  						<g:RadioButton ui:field="passengerRadioButton"  styleName='{style.radiobutton}' ui:name="typeOfUser"/>
  					</g:HorizontalPanel>
  					<g:HorizontalPanel>
  						<g:Label styleName='{style.label}' text="Distance Max:" width="7em"/>
						<g:TextBox ui:field="distanceMax" text="0" styleName='{style.textbox}'/>
  					</g:HorizontalPanel>
  					<g:HorizontalPanel>
  						<g:Button ui:field="sendAddress" text="Get travelway" styleName='{style.button}'/>
  						<g:Button ui:field="saveJourney" text="Save Journey" styleName='{style.button}'/>
  					</g:HorizontalPanel>
  				</g:VerticalPanel>
  			</g:HorizontalPanel>
  		</g:HorizontalPanel>

  		<g:HorizontalPanel ui:field="directionsPanel"/>
  
  	
  	
  		</g:FlowPanel>
  	
  	</ui:UiBinder>