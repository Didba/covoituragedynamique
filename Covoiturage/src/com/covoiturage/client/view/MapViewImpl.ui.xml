<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:m='urn:import:com.google.gwt.maps.client'
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
	xmlns:dir='urn:import:com.google.gwt.maps.client.geocode'>
	
	<ui:style>
		.button {
			/*padding: 1em;*/
			margin: 1em;
		}
    	.label { 
    	/*	background-color: black;*/ 
    		/*color: orange;*/
    		font: 112% Arial;
    		width: 3em;
    		margin: 0em 1em 0.5em 1em;
    	}
    	.panel { 
    		/*background-color: black;*/ 
    		border: 2px solid orange;	
    		/*margin: 2em;*/
    		padding: 1em;
    	}
    	
    	.grandpanel { 
    		border: 2px solid orange;	
    		margin: 1em;
    		/*padding: 1em;*/
    	}
    	.h1{
    		font: 200% Arial;
			/*color: orange;*/
			text-align: center;
			margin: 20px 3% 2%;
			/*background-color: black;*/
			border: solid orange 2px;
    	}
    	.h2{
    		font: 150% Arial;
			/*color: orange;*/
			text-align: center;
			margin : 0em 0em 1em 0em;
			/*background-color: black;*/
			border-bottom: solid orange 2px;
    	}
  	</ui:style>
  	
  		<g:FlowPanel ui:field="flowpanel" width="100%" height="100%">
  		
  		<g:Label styleName='{style.h1}'  text="Titre"/>
  		
  		<g:HorizontalPanel styleName='{style.panel}' width="96%" height="80%" horizontalAlignment="ALIGN_LEFT">
  			<g:SimplePanel ui:field="mapWidgetcontainer" styleName='{style.panel}' width="90%" height="100%">
  				<m:MapWidget ui:field='mapWidget' width="350px" height="350px"/> 
   			</g:SimplePanel>
  			<g:VerticalPanel styleName='{style.panel}'>
  				<g:HorizontalPanel>
  					<g:Label styleName='{style.label}' text="From :"/>
					<g:TextBox ui:field="originAddress" text="1,Grand place, Louvain-La-Neuve"/>
  				</g:HorizontalPanel>
  				<g:HorizontalPanel>
  					<g:Label styleName='{style.label}' text="To :"/>
					<g:TextBox ui:field="destinationAddress" text="2,Grand place, Louvain-La-Neuve"/>
  				</g:HorizontalPanel>
  				<g:HorizontalPanel>
  					<d:DatePicker ui:field="dateOfJourney"/>
  				</g:HorizontalPanel>
  				<g:HorizontalPanel>
  					<g:RadioButton name="driver"  ui:field="driverRadioButton" />
  					<g:RadioButton name="passenger"  ui:field="passengerRadioButton" />
  				</g:HorizontalPanel>
  				<g:HorizontalPanel>
  					<g:Label styleName='{style.label}' text="Distance Max:" width="7em"/>
					<g:TextBox ui:field="distanceMax" text="Distance Max"/>
  				</g:HorizontalPanel>
  				<g:HorizontalPanel>
  					<g:Button ui:field="sendAddress" text="Get travelway" styleName='{style.button}'/>
  					<g:Button ui:field="saveJourney" text="Save Journey" styleName='{style.button}'/>
  				</g:HorizontalPanel>
  			</g:VerticalPanel>
  		</g:HorizontalPanel>
  		<g:HorizontalPanel>
  			<dir:DirectionsPanel ui:field="directionsPanel" />
  			<g:VerticalPanel ui:field="typeOfUser"/>
  		</g:HorizontalPanel>
  	
  	
  		</g:FlowPanel>
  	
  	</ui:UiBinder>