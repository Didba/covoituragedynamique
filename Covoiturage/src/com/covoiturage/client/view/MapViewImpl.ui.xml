<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:m='urn:import:com.google.gwt.maps.client'
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client' xmlns:dir='urn:import:com.google.gwt.maps.client.geocoder'
	xmlns:gxt="urn:import:com.extjs.gxt.ui.client.widget" xmlns:form="urn:import:com.extjs.gxt.ui.client.widget.form">
	<ui:with type="com.covoiturage.client.i18n.MapViewConstants"
		field="constants" />
	<ui:style src="stylesheet.css" />
		
	<g:FlowPanel ui:field="flowpanel" width="100%" height="100%">


		<g:HorizontalPanel horizontalAlignment="ALIGN_LEFT">
			<g:HorizontalPanel styleName='{style.cartecontainer}'>
				<m:MapWidget ui:field='mapWidget' width="450px" height="450px" />
				<g:VerticalPanel styleName='{style.horairecontainer}'>
					<form:FormPanel ui:field="data" heading="{constants.header}">
						<g:HorizontalPanel width="100%">
							<g:Label styleName='x-form-item-label' ui:field="from" text="{constants.from} : " width="100%"/>
							<g:SuggestBox ui:field="originAdress"
								text="1,Grand place, Louvain-La-Neuve"  styleName="x-form-field x-form-text" width="100%"/>
						</g:HorizontalPanel>
						<g:HorizontalPanel width="100%">
							<g:Label styleName='x-form-item-label' ui:field="to" text="{constants.to} : " width="100%"/>
							<g:SuggestBox ui:field="destinationAdress"
								text="2,Grand place, Louvain-La-Neuve" styleName="x-form-field x-form-text"  width="100%"/>
						</g:HorizontalPanel>
						<form:DateField ui:field="dateOfJourney" fieldLabel="{constants.Dateofjourney}"/>
						<form:TextField ui:field="departureStartTimeItem" fieldLabel="{constants.departuretime}"/>
						<form:TextField ui:field="departureEndTimeItem" fieldLabel="{constants.and}"/>
						<form:TextField ui:field="arrivalTimeItem" fieldLabel="{constants.arrivaltime}"/>
						<g:HorizontalPanel styleName='{style.paddingdown}'>
							<g:RadioButton ui:field="driverRadioButton"
								styleName='{style.radiobutton}' ui:name="typeOfUser" text="{constants.driver}"/>
							<g:RadioButton ui:field="passengerRadioButton"
								styleName='{style.radiobutton}' ui:name="typeOfUser" text="{constants.passenger}"/>
						</g:HorizontalPanel>

						<form:TextField ui:field="distanceMaxField" fieldLabel="{constants.distmax}"/>

						<g:HorizontalPanel>
							<g:Button ui:field="sendAddress" styleName='{style.button}' text="{constants.gettravelway}"/>
							<g:Button ui:field="saveJourney" styleName='{style.button}' text="{constants.savejourney}" />
						</g:HorizontalPanel>

					</form:FormPanel>

				</g:VerticalPanel>
			</g:HorizontalPanel>
		</g:HorizontalPanel>
		<gxt:ContentPanel ui:field="directionsPanel" />



	</g:FlowPanel>

</ui:UiBinder>