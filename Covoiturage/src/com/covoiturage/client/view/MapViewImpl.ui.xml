<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:m='urn:import:com.google.gwt.maps.client'
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
	xmlns:dir='urn:import:com.google.gwt.maps.client.geocoder'
	xmlns:gxt="urn:import:com.extjs.gxt.ui.client.widget"
	xmlns:f="urn:import:com.extjs.gxt.ui.client.widget.form">
	
	<ui:style src="stylesheet.css"/>
		
		
  	<g:FlowPanel ui:field="flowpanel" width="100%" height="100%">

  		
  		<g:HorizontalPanel  horizontalAlignment="ALIGN_LEFT">
  			<g:HorizontalPanel styleName='{style.cartecontainer}'>
  				<m:MapWidget ui:field='mapWidget' width="450px" height="450px"/> 
   				<g:VerticalPanel styleName='{style.horairecontainer}'>
  					<g:HorizontalPanel>
  						<g:Label styleName='{style.label}' ui:field="from" width="3em"/>
						<g:SuggestBox ui:field="originAddress" text="1,Grand place, Louvain-La-Neuve" width="200px" styleName='{style.textbox}'/>
  					</g:HorizontalPanel>
  					<g:HorizontalPanel>
  						<g:Label styleName='{style.label}' ui:field="to" width="3em"/>
						<g:SuggestBox ui:field="destinationAddress" text="2,Grand place, Louvain-La-Neuve" width="200px" styleName='{style.textbox}'/>
  					</g:HorizontalPanel>
  					<g:HorizontalPanel>
  					<f:FormPanel ui:field="departureForm">
  						<f:DateField ui:field="dateOfJourney" styleName='{style.datepicker}'/>
  						<f:TextField ui:field="departureStartTimeItem"/>
  						<f:TextField ui:field="departureEndTimeItem"/>
  						<f:TextField ui:field="arrivalTimeItem"/>
  					</f:FormPanel>
  					</g:HorizontalPanel>
  					<g:HorizontalPanel styleName='{style.paddingdown}'>

  					</g:HorizontalPanel>
  					<g:HorizontalPanel styleName='{style.paddingdown}'>
  						<g:RadioButton  ui:field="driverRadioButton" styleName='{style.radiobutton}' ui:name="typeOfUser"/>
  						<g:RadioButton ui:field="passengerRadioButton"  styleName='{style.radiobutton}' ui:name="typeOfUser"/>
  					</g:HorizontalPanel>
  					<g:HorizontalPanel>
  						<g:Label styleName='{style.label}' ui:field="distmax" width="7em"/>
						<g:TextBox ui:field="distanceMax" text="0" styleName='{style.textbox}'/>
  					</g:HorizontalPanel>
  					<g:HorizontalPanel>
  						<g:Button ui:field="sendAddress"  styleName='{style.button}'/>
  						<g:Button ui:field="saveJourney"  styleName='{style.button}'/>
  					</g:HorizontalPanel>
  				</g:VerticalPanel>
  			</g:HorizontalPanel>
  		</g:HorizontalPanel>
  		<g:HorizontalPanel ui:field="directionsPanel"/>
  
  	
  	
  	</g:FlowPanel>
  	
  	</ui:UiBinder>