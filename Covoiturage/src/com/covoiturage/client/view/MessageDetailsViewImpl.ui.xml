<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
		<ui:with type="com.covoiturage.client.i18n.MessageDetailsViewConstants" field="constants"/>

		
	<g:VerticalPanel width="100%" height="100%">
		<g:HorizontalPanel>
			<g:Label ui:field="subjectLabel"/>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label ui:field="fromLabel"/>
			<g:Label ui:field="dateLabel"/>
			<g:Button ui:field="answerButton" text="{constants.answer}"/>
		</g:HorizontalPanel>
		<g:TextArea ui:field="messageText" width="100%" height="100%"/>

	</g:VerticalPanel>

</ui:UiBinder>