<!-- ViewerNvUser.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:form="urn:import:com.extjs.gxt.ui.client.widget.form"
	>
	<ui:with type="com.covoiturage.client.i18n.LicenceViewConstants" field="constants"/>
	<ui:style src="stylesheet.css"/>
		
		<g:FlowPanel ui:field="flowpanel" width="100%" height="100%">
			<g:Label text="{constants.title}" styleName='{style.h1}'/>
			<g:VerticalPanel styleName='{style.licencepanel}'>
				<g:ScrollPanel width="200" height="200" alwaysShowScrollBars="true">
					<g:HTML ui:field="html" HTML="{constants.message}" styleName='{style.text}'/>
				</g:ScrollPanel>
				<g:RadioButton text="{constants.Accept}" ui:name="LicenceAccepted" ui:field="RadioAccpeted"/>
				<g:RadioButton text="{constants.Denie}" ui:name="LicenceDinied" ui:field="RadioDenied"/>
				<g:Button ui:field="nextButton" styleName='{style.button}' text="{constants.next}"/>
			</g:VerticalPanel>	
		</g:FlowPanel>
	
	
	
	
</ui:UiBinder>
